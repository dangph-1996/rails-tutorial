<% provide :title, t("title-singup")  %>
<h1><%= t("sign-up.title-signup-1") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("sign-up.title-signup-5") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("sign-up.title-signup-7"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
